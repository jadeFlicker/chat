/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.flex{
  display:flex;
  width: 100%;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}
.inputBox{
    border:2rpx solid #eee;
    height: 60rpx;
}
button{
    margin: 0;
    color: #666;
    font-size: 30rpx;
    padding: 10rpx;
    line-height: normal;
    align-self: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.listBox{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
